@using ErgasiaMVC.ViewModels.Seller
@model CreateClientVm

@{
    ViewData["Title"] = "Create Client";
}

<h2>@ViewData["Title"]</h2>

<form method="post">

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
        @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
        {
                <span class="text-danger">@ViewData.ModelState["Email"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required />
        @if (ViewData.ModelState["FirstName"]?.Errors.Count > 0)
        {
                <span class="text-danger">@ViewData.ModelState["FirstName"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required />
        @if (ViewData.ModelState["LastName"]?.Errors.Count > 0)
        {
                <span class="text-danger">@ViewData.ModelState["LastName"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
        @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
        {
                <span class="text-danger">@ViewData.ModelState["Password"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="Afm">AFM</label>
        <input type="text" class="form-control" id="Afm" name="Afm" value="@Model.Afm" required />
        @if (ViewData.ModelState["Afm"]?.Errors.Count > 0)
        {
                <span class="text-danger">@ViewData.ModelState["Afm"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required />
        @if (ViewData.ModelState["PhoneNumber"]?.Errors.Count > 0)
        {
                <span class="text-danger">@ViewData.ModelState["PhoneNumber"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="ProgramName">Program</label>
        @Html.DropDownListFor(m => m.ProgramName, Model.Programs, "Select a Program", new { @class = "form-control" })
        @if (ViewData.ModelState["ProgramName"]?.Errors.Count > 0)
        {
                <span class="text-danger">@ViewData.ModelState["ProgramName"].Errors[0].ErrorMessage</span>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create Client</button>
</form>
